{
  "name": "hegel-experience-cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hegel-experience-cdk/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/hegel-experience-cdk",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/hegel-experience-cdk/src/main.ts",
        "tsConfig": "apps/hegel-experience-cdk/tsconfig.app.json",
        "assets": [
          "apps/hegel-experience-cdk/graphql/*.graphql",
          "apps/hegel-experience-cdk/graphql/resolvers/*.*.vtl"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "hegel-experience-cdk:build"
      },
      "configurations": {
        "local": {
          "buildTarget": "hegel-experience-cdk:build:local"
        },
        "development": {
          "buildTarget": "hegel-experience-cdk:build:development"
        },
        "production": {
          "buildTarget": "hegel-experience-cdk:build:production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "cd apps/hegel-experience-cdk && cdk deploy"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/hegel-experience-cdk/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/hegel-experience-cdk/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
